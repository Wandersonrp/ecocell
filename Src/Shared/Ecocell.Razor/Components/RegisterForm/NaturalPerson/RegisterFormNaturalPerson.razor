@using System.ComponentModel.DataAnnotations

<div class="form">
    <MudForm Class="ma-0 pa-0" Model="_model" @ref="_form" @bind-Errors="@errors" Validation="@(_validator.ValidateValue)" Style="width: 100%; gap: 1.25rem;">
        <MudTextField 
            Class="ma-0 pa-0"
            T="string" 
            @bind-Value="_model.Name"
            Required="true" 
            RequiredError="Nome é obrigatório!" 
            Placeholder="Nome" 
            Variant="Variant.Outlined"
        />
        <MudTextField 
            Class="ma-0 pa-0"
            T="string"
            @bind-Value="_model.Email"
            Required="true" 
            Placeholder="E-mail"
            Variant="Variant.Outlined"
            RequiredError="E-mail é obrigatório!"
            Validation="@(new EmailAddressAttribute() { ErrorMessage = "O endereço de e-mail é inválido!" })" 
        />
        <MudTextField 
            Class="ma-0 pa-0"
            T="string"
            @bind-Value="_documentText"
            Required="true"
            RequiredError="CPF é obrigatório!"
            Placeholder="___.___.___-__"
            Variant="Variant.Outlined" 
        />
        <MudTextField 
            Class="ma-0 pa-0"
            T="string"
            @bind-Value="_model.Password"
            InputType="InputType.Password"
            Placeholder="Senha" 
            Variant="Variant.Outlined"            
        />
        <MudTextField 
            Class="ma-0 pa-0"
            T="string"
            @bind-Value="_model.PasswordConfirmation"
            InputType="InputType.Password"
            Placeholder="Confirmar senha"
            Variant="Variant.Outlined"             
        />
        <div class="d-flex align-center gap-"> 
            <MudButton 
                Variant="Variant.Filled" 
                Color="Color.Primary"
                Class="pa-3"
                FullWidth
                OnClick="@(async () => await Submit())"
            >
            Cadastrar
            </MudButton>
        </div>
    </MudForm>
</div>
