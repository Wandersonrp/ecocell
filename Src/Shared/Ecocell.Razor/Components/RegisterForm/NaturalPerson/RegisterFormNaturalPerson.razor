@using System.ComponentModel.DataAnnotations

<div class="form">
    <MudForm Class="ma-0 pa-0" @ref="form" @bind-IsValid="@success" @bind-Errors="@errors" Style="width: 100%; gap: 1.25rem;">
        <MudTextField 
            Class="ma-0 pa-0"
            T="string" 
            Required="true" 
            RequiredError="Nome é obrigatório!" 
            Placeholder="Nome" 
            Variant="Variant.Outlined"
        />
        <MudTextField 
            Class="ma-0 pa-0"
            T="string"  
            Required="true" 
            Placeholder="E-mail"
            Variant="Variant.Outlined"
            RequiredError="E-mail é obrigatório!"
            Validation="@(new EmailAddressAttribute() { ErrorMessage = "O endereço de e-mail é inválido!" })" 
        />
        <MudTextField 
            Class="ma-0 pa-0"
            T="string" 
            @ref="pwField1"
            InputType="InputType.Password"
            Placeholder="Senha" 
            Variant="Variant.Outlined"
            Validation="@(new Func<string, IEnumerable<string>>(PasswordStrength))" 
        />
        <MudTextField 
            Class="ma-0 pa-0"
            T="string"
            InputType="InputType.Password"
            Placeholder="Confirmar senha"
            Variant="Variant.Outlined" 
            Validation="@(new Func<string, string>(PasswordMatch))"
        />
        <div class="d-flex align-center gap-"> 
            <MudButton 
                Variant="Variant.Filled" 
                Color="Color.Primary"
                Class="pa-3"
                FullWidth
            >
            Cadastrar
            </MudButton>
        </div>
    </MudForm>
</div>
